.side_bar
  .side_bar__header
    .side_bar__header__items
      .side_bar__header__items__name
        = current_user.name
      .side_bar__header__items__iconlist
        = link_to new_group_path do
          = icon('far', 'edit', class: "icon_btn")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "icon_btn")

  .side_bar__grouplist
    - current_user.groups.each do |group|
      .side_bar__grouplist__groups
        = link_to group_messages_path(group) do
          .side_bar__grouplist__groups__group-name
            = group.name
          .side_bar__grouplist__groups__group-message
            = group.show_last_message
